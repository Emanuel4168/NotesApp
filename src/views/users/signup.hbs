<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Register
            </div>

            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Your Name" value="{{name}}">
                    </div>

                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Your email" value="{{email}}">
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Your password" value="{{password}}">
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" value="{{confirmPassword}}"> 
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Create Acount</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>